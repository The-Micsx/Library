<Window x:Class="Library.AuthorizationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library"
        mc:Ignorable="d"
        Title="AuthorizationWindow" Height="300" Width="200">
    <Grid Margin="0,0,0,-6">
        <TextBox x:Name="Login" HorizontalAlignment="Center" VerticalAlignment="Top" TextWrapping="Wrap" Width="120" Margin="0,94,0,0" FontSize="20"/>
        <TextBox x:Name="Password" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Margin="0,174,0,0" FontSize="20"/>
        <TextBlock Margin="0,142,91,0" TextWrapping="Wrap" Text="Пароль" RenderTransformOrigin="0.479,1.932" FontSize="20" Height="27" VerticalAlignment="Top" HorizontalAlignment="Center" Width="69"/>
        <TextBlock Margin="0,62,104,0" TextWrapping="Wrap" Text="Логин" RenderTransformOrigin="0.479,2.195" FontSize="20" HorizontalAlignment="Center" Width="56" Height="27" VerticalAlignment="Top"/>
        <Button x:Name="Authorization" Content="Авторизироваться" Margin="82,235,10,10" Click="Authorization_Click"/>

    </Grid>
</Window>
