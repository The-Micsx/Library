                <Border  BorderBrush="Black" Height="50" Width="160" BorderThickness="1" Background="White">
                    <ListBox x:Name="listReqests">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{}"/>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>                    
                </Border>
            </Popup>
        </Button>


    </Grid>
</Window>
    
